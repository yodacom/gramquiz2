extends layout2

block content
    h1 Enneagram Word Quiz
    header

        .headerBox
            h2

            p
                | Here is your Personality Report
                user.name
                span.emphasis
                |
        main
            if report
                each rep, index in report
                    if rep.personalityType
                        div
                            div=rep.personalityType.typeNumber
                            div=rep.personalityType.center
                            div=rep.personalityType.description

                a(href='/quiz') Take the Quiz again
            else
                You need to take the quiz
                a(href='/quiz') Click Here to Start
